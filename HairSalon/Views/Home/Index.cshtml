@{
  Layout = "_Layout";
}
<h1>Hair Salon Database</h1>

<h2>Stylists</h2>
@if (Model.Count == 0)
{
 <h3>No stylists in database!</h3>
 <a href="/index/new">Add Stylist</a>
}
else
{
<ul>
    @foreach(var stylist in Model)
    {
  <li><a href="/index/@stylist.Id">@stylist.Name</a></li>
    }
</ul>
  <a href="/index/new">Add Stylist</a>
}
